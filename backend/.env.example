# Environment Variables Template
# Copy this file to .env and configure for your environment

# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-django-command
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration
# For SQLite (default - development only):
# DATABASE_URL=sqlite:///db.sqlite3

# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://username:password@localhost:5432/serveflow_db

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=ServeFlow AI <noreply@serveflow.ai>

# For development (prints to console):
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# WebSocket Channel Layer (Redis)
# For production, install Redis and configure:
REDIS_URL=redis://localhost:6379/0

# For development (InMemory - already configured in settings.py):
# No environment variable needed

# Google Gemini AI (Optional)
# Only needed if using external AI microservices
# GEMINI_API_KEY=your-gemini-api-key-here

# Static and Media Files
# STATIC_URL=/static/
# MEDIA_URL=/media/

# Security Settings (Production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# X_FRAME_OPTIONS=DENY
