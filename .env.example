# AI-Based Service Aggregator

# Core Environment Variables
GEMINI_API_KEY=your_gemini_api_key
SECRET_KEY=generate_a_secure_random_string
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-app.koyeb.app

# Database
# Production (Koyeb/PostgreSQL)
DATABASE_URL=postgres://user:password@host:port/dbname
# Development (SQLite)
# DATABASE_URL=sqlite:///db.sqlite3

# Redis (for WebSockets)
REDIS_URL=redis://:password@host:port

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend.koyeb.app

# Services
VITE_API_URL=https://your-backend.koyeb.app/api/
VITE_WS_URL=wss://your-backend.koyeb.app/ws/notifications/
AI_SERVICE_URL=https://your-ai.koyeb.app
MATCHING_SERVICE_URL=https://your-matching.koyeb.app

# Email (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
